# Application
APP_NAME=habibti
APP_ENV=development
DEBUG=true
SECRET_KEY=change-this-to-a-random-secret-key-in-production
API_HOST=0.0.0.0
API_PORT=8000
API_URL=http://localhost:8000
WEB_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/habibti
MONGODB_DB_NAME=habibti

# Redis
REDIS_URL=redis://localhost:6379/0

# Authentication
JWT_SECRET=change-this-to-a-random-jwt-secret-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=15
REFRESH_TOKEN_EXPIRY_DAYS=30

# OTP Service (Email)
OTP_PROVIDER=email
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@habibti.app
FROM_NAME=HABIBTI

# Legacy Twilio (optional, for future SMS features)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Media Storage (Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Logging
LOG_LEVEL=INFO
